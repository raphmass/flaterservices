<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>


<%= simple_form_for (@task) do |f| %>
<%= f.error_notification %>
<%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
<%= f.input :status, :as => :hidden, :input_html => { :value => 0 } %>
<%= f.input :action, selected:'Visit', collection: Task::ACTIONS %>
<%= f.input :location %>
<%= f.input :date %>
<%= f.input :price %>
<%= f.button :submit, class: "btn-primary" %>
<%= link_to "Back", my_tasks_path , {:class=>"btn btn-default"} %>
<% end %>
