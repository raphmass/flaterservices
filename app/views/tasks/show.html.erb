<div class="container">
 <h1>Task <%= @task.id %> - <%= @task.action %> </h1>
</div>

<div class="container d-flex">

	<div class="task-card">
	  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg">
	  <div class="task-card-infos">
	    <div>
	      <h2> <%= @task.action %></h2>
	      <p><strong>Status: </strong><%= @task.status %></p>
	      <p><strong>Location: </strong><%= @task.location %></p>
	      <p><strong>Date: </strong><%= @task.date %></p>
	      <p><strong>Flat owner: </strong><%= @task.user_id %></p>
	    </div>
	    <h2 class="task-card-apply btn btn-success"><%= link_to "Apply" , new_task_assignment_path(@task) %></h2>
	    <h2 class="task-card-pricing"><%= @task.price %> â‚¬</h2>
	    <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="task-card-user avatar-bordered"/>
	  </div>
	</div>
  <div id="map" style="width: 100%; height: 600px;"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


