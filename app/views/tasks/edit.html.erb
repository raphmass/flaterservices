<div class="container">
	<br>
	
	<% if current_user.id == @task.user_id %>
		<h1>Edit task <%= @task.id %> (you are the owner)</h1>
	
	  <div class="container">
	  	<%= simple_form_for (@task) do |f| %>
	  	<%= f.error_notification %>
	  	<%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
	  	<%= f.input :status, :as => :hidden, :input_html => { :value => 0 } %>
	  	<%= f.input :action, selected:'Visit', collection: Task::ACTIONS %>
	  	<%= f.input :location %>
	  	<%= f.input :date %>
	  	<%= f.input :price %>
	  	<%= f.button :submit, class: "btn-primary" %>
	  	<%= link_to "Back", my_tasks_path , {:class=>"btn btn-default"} %>
	  	<% end %>
	  </div>
	<% else %>
		<h1>You cannot edit this task! Only the task owner can!</h1>
	<% end %>



</div>